@model IEnumerable<HotelReservationv2.Models.tblRooms>

@{
    ViewData["Title"] = "Rooms";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: 
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ingRoomTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ingRoomBandID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ingRoomPriceID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strFloor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.memAdditionNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ingRoomTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingRoomBandID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingRoomPriceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strFloor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.memAdditionNotes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ingRoomID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ingRoomID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ingRoomID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
